<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/matrial_blue_500</item>
        <item name="android:colorBackground">@color/material_blue_100</item>
        <item name="android:colorAccent">@color/material_red_200</item>
        <item name="android:statusBarColor">@color/material_blue_200</item>
        <item name="android:textColorPrimary">@color/material_red_300</item>
        <item name="android:textColorSecondary">@color/material_red_300</item>
        <item name="android:textColorPrimaryInverse">@color/material_red_300_155</item>
        <item name="android:textColorSecondaryInverse">@color/material_red_300_155</item>
    </style>

    <style name="AppThemeInit" parent="android:Theme.Material.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/matrial_blue_500</item>
        <item name="android:colorBackground">@color/material_blue_100</item>
        <item name="android:colorAccent">@color/material_red_300</item>
        <item name="android:statusBarColor">@color/material_blue_200</item>
        <item name="android:textColorPrimary">@color/material_red_300</item>
        <item name="android:textColorSecondary">@color/material_red_300</item>
        <item name="android:textColorPrimaryInverse">@color/material_red_300_155</item>
        <item name="android:textColorSecondaryInverse">@color/material_red_300_155</item>
    </style>

    <style name="splash" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>